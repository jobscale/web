#!/bin/bash -eu

wait=5
sleep $wait

[ $(id -u) -eq 1000 ] && [ -e /dev/kvm ] && sudo chown $(whoami). /dev/kvm

google-chrome "https://time.is"
sleep $wait

main() {
    nohup google-chrome "https://jsx.jp" >& /dev/null &
    sleep $wait

    nohup discord >& /dev/null &
    sleep $wait

    nohup slack >& /dev/null &
    sleep $wait

    nohup wire-desktop >& /dev/null &
    sleep $wait

    nohup terminator >& /dev/null &
    sleep $wait
}

main

[ -s "$HOME/bin/.autostart-extra" ] && . "$HOME/bin/.autostart-extra" && extra

