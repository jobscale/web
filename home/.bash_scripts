mkcd() {
    mkdir $1 && cd $_
}

b() {
  cp -pr $1{,.B-$(date +'%Y%m%d%H%M%S')} && echo "backuped --- $1.B-$(date +'%Y%m%d%H%M%S')"
}

sudo() {
    if [[ $1 == "shutdown" ]]
    then
        echo "not work shutdown"
        return
    fi
    command sudo "$@"
}

git() {
    if [[ $1 == "clone" && $2 == "--depth" ]]
    then
        shift
        cmd="git clone --depth 1 $@"
        echo "$cmd"
        command $cmd
        return
    fi
    if [[ $@ == "branch -a" ]]
    then
        cmd="git fetch --all --prune"
        echo "$cmd"
        command $cmd
    fi
    command git "$@"
}

realdir() {
    if [ "-bash" == "$0" ]
    then
        pwd
        return
    fi
    dir=$(dirname "$0")
    if [ -d "$dir" ]
    then
        echo $(cd "$dir" && pwd)
    else
        pwd
    fi
}

skip() {
    for i in $(seq 1 $1)
    do
        echo
    done
}

loop() {
    for i in $(seq $1 -1 1)
    do
        printf '\r%5d' $i
        sleep 1
    done
    printf '\r%5d\n' 0
}

gff() {
    while read file
    do
        grep $@ "${file}"
    done < <(ff)
}

less_with_unbuffer () {
    unbuffer "$@" |& less -SR
}